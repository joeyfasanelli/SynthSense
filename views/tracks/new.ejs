    }

    .navbar {
        padding: 18px 0px 18px 0px;
        
    }

    .link {
        list-style: none;
        vertical-align: baseline;
        text-decoration: none;
        -webkit-tap-highlight-color: transparent;
        color: white;
        font-family:'Montserrat', sans-serif;
        padding: 0px 20px 0px 20px;
        
    }

    .link:hover {
        color: #dadada;
    }

    .form {
            color: rgb(255, 255, 255);
            font-family:'Montserrat', sans-serif;
            left: 45%;
